<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cinemaapp.views.billboard.MovieItems"
    android:orientation="vertical"
    android:padding="5dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorGray">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="vertical"
            android:paddingLeft="3dp"
            android:paddingRight="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÃ­tulo"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/titleMovieItem"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Jasmany "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genero"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/genreMovieItem"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estudio"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/ratingMovieItem"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categoria"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/ratingMovieItems"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/imageMovieItem"
            android:layout_width="180dp"
            android:layout_height="225dp"
            android:layout_weight="0"
            android:padding="3dp"/>


    </LinearLayout>





</LinearLayout>
