<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="1dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:paddingBottom="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:orientation="vertical"
                android:paddingLeft="1dp"
                android:paddingRight="3dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billboard_detail_title"
                        android:textSize="7dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:fontFamily="serif"
                        android:textColor="@color/colorPrimaryDark" />
                    <TextView
                        android:id="@+id/titleMovieItem"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billboard_detail_gender"
                        android:textSize="7dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:fontFamily="serif"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/genreMovieItem"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billboard_detail_rating"
                        android:textSize="7dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:fontFamily="serif"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/ratingMovieItem"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textColor="@color/colorPrimaryDark"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billboard_detail_studio"
                        android:textSize="7dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:fontFamily="serif"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/studioMovieItem"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageMovieItem"
                android:layout_width="160dp"
                android:layout_height="230dp"
                android:layout_weight="0"
                android:padding="1.5dp"
                android:background="@drawable/image_view_photo_movie"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>









</LinearLayout>
