<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cinemaapp.views.billboard.Billboard"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/billboardAppProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/progress_bar_icon"
        style="?android:attr/progressBarStyleLargeInverse"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cartelera"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:textColor="@color/colorPrimaryDark"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/billboardAppSwipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/billboardAppListViewMovieItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>

        </android.support.v4.widget.SwipeRefreshLayout>


    </LinearLayout>



</RelativeLayout>
